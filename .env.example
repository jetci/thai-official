# Environment variables declared in this file are examples and should be customized
# for your development and production environments.
#
# DO NOT COMMIT YOUR ACTUAL .env FILE TO VERSION CONTROL.

# PostgreSQL Database URL (matches docker-compose.postgres.yml)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/my_gov_exam_db?schema=public"

# JWT Secrets
# Use strong, randomly generated strings for these secrets in production.
# Example for generating a secret: openssl rand -hex 32
JWT_ACCESS_SECRET="your-access-secret-key"
JWT_REFRESH_SECRET="your-refresh-secret-key"

# JWT Expiration Times
# Format examples: 60, "2 days", "10h", "7d"
JWT_ACCESS_TTL="15m"
JWT_REFRESH_TTL="7d"

# Application Port
PORT=3000
